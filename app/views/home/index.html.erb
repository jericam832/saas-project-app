<div class="container">
    <% if current_user %>
        <h3>Organization: <%= @tenant.name %></h3>
    <% else %>
        <div class="jumbotron">
            <h2>Welcome to the Project Management App!</h2>
            <p class="lead">
                You'll love managing your project with our SaaS application. Please take a look at our great plans!
            </p>
        </div>
        <div class="container">
            <div class="row justify-content-around">
                <div class="card col-md-4 plan">
                    <h2 class="card-header card-header-danger">Free Plan</h2>
                    <div class="card-body">
                        <div class="price pull-right">
                            Price: Free
                        </div>
                        <div class="features">
                            <ul>
                                <li>Unlimited file uploads</li>
                                <li>Responsive design</li>
                                <li>Access anywhere</li>
                                <li>1 project</li>
                            </ul>
                        </div>
                        <p>
                            <%= link_to 'Sign Up', new_user_registration_path(plan: 'free'), class: 'btn btn-danger btn-round sign-up' %>
                        </p>
                    </div>
                    
                </div>
        
                <div class="card col-md-4 plan">
                    <h2 class="card-header card-header-info">Premium Plan</h2>
                    <div class="card-body">
                        <div class="price pull-right">
                            Price: $10
                        </div>
                        <div class="features">
                            <ul>
                                <li>Unlimited file uploads</li>
                                <li>Responsive design</li>
                                <li>Access anywhere</li>
                                <li class='text-info'>Unlimited projects</li>
                            </ul>
                        </div>
                        <p>
                            <%= link_to 'Sign Up', new_user_registration_path(plan: 'premium'), class: 'btn btn-info btn-round sign-up' %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
    
</div>

