<div class="container">
  <%= bootstrap_devise_error_messages! %>
  <div class="card devise-bs col-md-8 offset-md-2">
    <div class="card-header card-header-info">
      <h1><%= t('.sign_up', default: 'Sign up') %></h1>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <%= fields_for( :tenant ) do |w| %>
          <div class="form-group">
            <span class='description' data-toggle="tooltip" title="(Unique name for your group or organization for the new account)"> 
              <%= w.label :name, 'Organization' %>
            </span>
            <%= w.text_field :name, required: true, class: "form-control" %>
          </div>
          <div class="form-group col-4 no-left-padding">
            <%= w.label :plan %>
            <%= w.select :plan, options_for_select(Plan.options, params[:plan]), {}, required: true, class: "form-control" %>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-success btn-lg' %>
        </div>
      <% end %>
    </div>
    <p>
      <%= render 'devise/shared/links' %>
    </p>

  </div>
</div>